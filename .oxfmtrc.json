{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"trailingComma": "all",
	"printWidth": 80,
	"useTabs": true,
	"ignorePatterns": ["pnpm-lock.yaml"],
	"overrides": [
		{
			"files": ["**/*.md"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ["**/package.json"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
